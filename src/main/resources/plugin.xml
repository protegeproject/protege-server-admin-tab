		<category value="Client-Server"/>
	</extension>

	<extension id="PolicyView"
			   point="org.protege.editor.core.application.ViewComponent">
		<label value="Access Control Policy"/>
		<class value="edu.stanford.protege.admin.ui.PolicyView"/>
		<headerColor value="@org.protege.ontologycolor"/>
		<category value="Client-Server"/>
	</extension>

	<extension id="ServerSettingsView"
			   point="org.protege.editor.core.application.ViewComponent">
		<label value="Server settings"/>
		<class value="edu.stanford.protege.admin.ui.ServerSettingsView"/>
